<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/TextPalyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="68dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Single PLayer"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llFirstLine"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ibtnFFirst"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@color/white"
            tools:ignore="contentDescription"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:background="@color/black" />

        <ImageButton
            android:id="@+id/ibtnFSecond"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@color/white"
            tools:ignore="contentDescription" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:background="@color/black" />

        <ImageButton
            android:id="@+id/ibtnFThird"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@color/white"
            tools:ignore="contentDescription" />

    </LinearLayout>

    <View
        android:id="@+id/view_divider_first"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/llFirstLine"
        app:layout_constraintStart_toStartOf="@id/llFirstLine"
        app:layout_constraintTop_toBottomOf="@id/llFirstLine" />

    <LinearLayout
        android:id="@+id/llSecondLine"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_divider_first">

        <ImageButton
            android:id="@+id/ibtnSFirst"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@color/white"
            tools:ignore="contentDescription" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:background="@color/black" />

        <ImageButton
            android:id="@+id/ibtnSSecond"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@color/white"
            tools:ignore="contentDescription" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:background="@color/black" />

        <ImageButton
            android:id="@+id/ibtnSThird"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@color/white"
            tools:ignore="contentDescription" />

    </LinearLayout>

    <View
        android:id="@+id/view_divider_second"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@id/llFirstLine"
        app:layout_constraintStart_toStartOf="@id/llFirstLine"
        app:layout_constraintTop_toBottomOf="@id/llSecondLine" />

    <LinearLayout
        android:id="@+id/llThirdLine"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_divider_second">

        <ImageButton
            android:id="@+id/ibtnTFirst"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@color/white"
            tools:ignore="contentDescription" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:background="@color/black" />

        <ImageButton
            android:id="@+id/ibtnTSecond"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@color/white"
            tools:ignore="contentDescription" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:background="@color/black" />

        <ImageButton
            android:id="@+id/ibtnTThird"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@color/white"
            tools:ignore="contentDescription" />

    </LinearLayout>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:text="Restart"
        android:textSize="24sp"
        android:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llThirdLine" />
</androidx.constraintlayout.widget.ConstraintLayout>